---json
{
  "permalink": "feed.xml",
  "eleventyExcludeFromCollections": true,
  "metadata": {
    "title": "Sociabli Blog",
    "description": "Sociabli helps you to share your content online. Post once and let Sociabli sync to other services and platforms.",
    "language": "en",
    "base": "https://sociab.li/",
    "author": {
      "name": "Maurice Renck"
    }
  }
}
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Sociabli Blog</title>
    <link>{{ metadata.base }}/feed.xml</link>
    <atom:link href="https://sociab.li/blog/{{ permalink }}" rel="self" type="application/rss+xml" />
    <description>Sociabli helps you to share your content online. Post once and let Sociabli sync to other services and platforms.</description>
    <language>en</language>
    {% for post in posts %}
    <item>
      <title>{{ post.title }}</title>
      <link>https://sociab.li/blog/{{ post.date | date('yyyy') }}/{{ post.slug }}/</link>
      <description><![CDATA[{{ post.intro | markdown | safe }} {{ post.content.value | safe }}]]></description>
      <pubDate>{{ post.date | toRFC3339 }}</pubDate>
      <dc:creator>Maurice Renck</dc:creator>
      <guid>https://sociab.li/blog/{{ post.date | date('yyyy') }}/{{ post.slug }}/</guid>
    </item>
    {%- endfor %}
  </channel>
</rss>
